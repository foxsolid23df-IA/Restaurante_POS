{
  "name": "restaurante-pos",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "preview:prod": "vite preview --mode production --port 4173 --host 0.0.0.0",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --coverage --watchAll=false",
    "test:integration": "jest --testPathPattern=integration --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:watch": "jest --watch",
    "security:check": "npm audit --audit-level moderate",
    "security:sast": "semgrep --config=.semgrep.yml src/",
    "security:license": "license-checker --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC'",
    "optimize:images": "imagemin src/assets/images/* --out-dir=src/assets/images/optimized --plugin=pngquant --plugin=mozjpeg --plugin=svgo",
    "analyze:bundlesize": "npm run build:prod && npx bundle-analyzer dist/static/js/*.js",
    "size-check": "bundlesize",
    "docker:build": "docker build -t restaurante-pos:latest .",
    "docker:build:prod": "docker build -f Dockerfile.prod -t restaurante-pos:prod .",
    "docker:run": "docker run -p 3000:3000 restaurante-pos:latest",
    "db:migrate": "supabase db push",
    "db:migrate:dry": "supabase db push --dry-run",
    "db:reset": "supabase db reset",
    "db:seed": "supabase db push --include-seed",
    "db:types": "supabase gen types typescript --local > src/types/supabase.ts",
    "deploy:staging": "./scripts/deploy-staging.sh",
    "deploy:production": "./scripts/deploy-production.sh",
    "deploy:rollback": "./scripts/rollback.sh",
    "monitoring:start": "docker-compose -f docker-compose.monitoring.yml up -d",
    "monitoring:stop": "docker-compose -f docker-compose.monitoring.yml down",
    "health:check": "curl -f http://localhost:3000/health",
    "health:full": "./scripts/health-check.sh",
    "backup:create": "./scripts/backup.sh create",
    "backup:restore": "./scripts/backup.sh restore",
    "backup:verify": "./scripts/backup.sh verify"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@react-google-maps/api": "^2.20.8",
    "@supabase/supabase-js": "^2.91.1",
    "clsx": "^2.1.1",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.563.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.13.0",
    "recharts": "^3.7.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vite": "^7.3.1"
  }
}
